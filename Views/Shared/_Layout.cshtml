<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResourceHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/group4.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ResourceHub</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Resource" asp-action="MyUploads">My Uploads</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Resource" asp-action="Upload">🖊️Upload Resource</a>
                        </li>
                    </ul>
                </div>

                <form class="d-flex" role="search" style="padding-right: 30%;">
                    <input class="form-control me-2" type="search" placeholder="Search resource..." aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>  
                </form>

                <nav class="navbar bg-body-tertiary">
                    <button class="btn-outline-success btn-sm">
                        <a class="nav-link dropdown-toggle" style="font-size:small;" href="#" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        👋Hello, John
                    </a>
                    
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">View Profile</a></li>
                        <li><a class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                    </button>
                </nav>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - group4 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
