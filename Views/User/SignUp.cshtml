@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up Page";
}

<div class="text-center">
    <h4>Create a New Account</h4>p
    <hr style="width: 50%; margin-left: 25%;">

    <div style="padding-bottom: 25px;">
        <img src="~/images/sign-up.gif" style="width: 350px; height: 300px;" alt="">
    </div>

    <form asp-action="SignUp" method="post">
        @Html.AntiForgeryToken()

        <div class="mx-auto" style="width: 30%;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 

            <div class="form-group" style="padding-bottom: 25px;">
                <input asp-for="FirstName" placeholder="First Name" class="form-control" />
            </div>

            <div class="form-group" style="padding-bottom: 25px;">
                <input asp-for="LastName" placeholder="Last Name" class="form-control" />
            </div>

            <div class="form-group" style="padding-bottom: 25px;">
                <input asp-for="Email" placeholder="Email" class="form-control" />
            </div>

            <div class="form-group" style="padding-bottom: 25px;">
                <input asp-for="Phone" placeholder="Phone" class="form-control" type="tel" />
            </div>

            <div class="form-group" style="padding-bottom: 25px;">
                <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
            </div>

            <button type="submit" style="width: 100%;" class="btn btn-primary">Create Account</button>
            <span>Already have an account. Click to Login <a asp-controller="User" asp-action="Login">Login</a> </span>
        </div>
    </form>
</div>
